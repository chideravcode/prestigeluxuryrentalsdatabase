<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainlayout" prefHeight="400.0" prefWidth="1000.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="prestigerentalscrudtest.FXMLController">
   <left>
      <VBox fx:id="verticalnavbar" prefHeight="400.0" prefWidth="200.0" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="prestigeluxuryrentalslogo" fitHeight="78.0" fitWidth="175.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../../Pictures/prestigeluxuryrentalslogo.png" />
               </image>
            </ImageView>
            <Button fx:id="buttonbranches" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="26.0" prefWidth="175.0" style="-fx-background-color: black; -fx-border-color: white;" text="BRANCHES" textFill="WHITE" />
            <Button fx:id="buttoncars" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="26.0" prefWidth="175.0" style="-fx-background-color: black; -fx-border-color: white;" text="CARS" textFill="WHITE" />
            <Button fx:id="buttoncustomers" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="26.0" prefWidth="175.0" style="-fx-background-color: black; -fx-border-color: white;" text="CUSTOMERS" textFill="WHITE" />
            <Button fx:id="buttonemployees" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="26.0" prefWidth="175.0" style="-fx-background-color: black; -fx-border-color: white;" text="EMPLOYEES" textFill="WHITE" />
            <Button fx:id="buttoninsurancepolicies" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="26.0" prefWidth="175.0" style="-fx-background-color: black; -fx-border-color: white;" text="INSURANCE POLICIES" textFill="WHITE" />
            <Button fx:id="buttonrentals" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="26.0" prefWidth="175.0" style="-fx-background-color: black; -fx-border-color: white;" text="RENTALS" textFill="WHITE" />
            <Button fx:id="buttonabout" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="26.0" prefWidth="175.0" style="-fx-background-color: black; -fx-border-color: white;" text="ABOUT" textFill="WHITE" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </left>
</BorderPane>
